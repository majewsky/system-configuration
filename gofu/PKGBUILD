pkgname=gofu
_commit="e4d68911c533a750022ddfe06aff080ca6cf678b"
epoch=1
pkgver="20181222.1.g${_commit:0:10}"
pkgrel=1
pkgdesc='Collection of Go utilities'
arch=('x86_64')
_goget_url='github.com/majewsky/gofu'
url="https://${_goget_url}"
license=('GPL3')
depends=()
makedepends=('go')
source=("gofu::git+https://${_goget_url}#commit=${_commit}")
sha256sums=('SKIP')

build() {
  cd "${srcdir}/gofu"
  make
}

package() {
  cd "${srcdir}/gofu"
  make install DESTDIR="${pkgdir}"
}
