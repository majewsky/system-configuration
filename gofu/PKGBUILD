# novendor

pkgname=gofu
epoch=2
pkgver=2025.1
pkgrel=1
pkgdesc='Collection of Go utilities'
arch=('x86_64')
url="https://github.com/majewsky/gofu"
license=('GPL-3.0-only')
depends=()
makedepends=('go')
source=("${url}/archive/v${pkgver}.tar.gz")
sha256sums=('24f6a53a507a8d6f805ed1ba4edb7551a725d075395e0520c89fd82977dc4a71')

build() {
  cd "${srcdir}/gofu-${pkgver}"
  make
}

package() {
  cd "${srcdir}/gofu-${pkgver}"
  make install DESTDIR="${pkgdir}"
}
