pkgname=gofu
_commit="ef84ca3e82f422118c69a0c562433c185e1dcb9b"
epoch=1
pkgver="20181222.2.g${_commit:0:10}"
pkgrel=1
pkgdesc='Collection of Go utilities'
arch=('x86_64')
_goget_url='github.com/majewsky/gofu'
url="https://${_goget_url}"
license=('GPL3')
depends=()
makedepends=('go')
source=("gofu::git+https://${_goget_url}#commit=${_commit}")
sha256sums=('SKIP')

build() {
  cd "${srcdir}/gofu"
  make
}

package() {
  cd "${srcdir}/gofu"
  make install DESTDIR="${pkgdir}"
}
