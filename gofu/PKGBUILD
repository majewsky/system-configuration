pkgname=gofu
epoch=2
pkgver=2021.1
pkgrel=1
pkgdesc='Collection of Go utilities'
arch=('x86_64')
url="https://github.com/majewsky/gofu"
license=('GPL3')
depends=()
makedepends=('go')
source=("${url}/archive/v${pkgver}.tar.gz")
sha256sums=('a2ef6294659da656bdc825c6043cce957fef7954b78fc04684c771771a76c027')

build() {
  cd "${srcdir}/gofu-${pkgver}"
  make
}

package() {
  cd "${srcdir}/gofu-${pkgver}"
  make install DESTDIR="${pkgdir}"
}
