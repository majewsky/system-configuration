pkgname=gofu
epoch=1
pkgver=2020.2
pkgrel=1
pkgdesc='Collection of Go utilities'
arch=('x86_64')
url="https://github.com/majewsky/gofu"
license=('GPL3')
depends=()
makedepends=('go')
source=("${url}/archive/v${pkgver}.tar.gz")
sha256sums=('b192e454c104fac47921149c5d55dd583b907ed5ca9ff685b01be410f29a9504')

build() {
  cd "${srcdir}/gofu-${pkgver}"
  make
}

package() {
  cd "${srcdir}/gofu-${pkgver}"
  make install DESTDIR="${pkgdir}"
}
