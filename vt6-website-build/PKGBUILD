pkgname=vt6-website-build
pkgver=2
pkgrel=1
pkgdesc='Generator for vt6.io'
arch=('x86_64')
url="https://github.com/vt6/website"
license=('GPL3')
depends=(
    'texlive-core'       # pdflatex, tikz.sty
    'texlive-latexextra' # standalone.cls
    'pdf2svg'
)
makedepends=('go')
source=("${url}/archive/v${pkgver}.tar.gz")
sha256sums=('82f1239cef89035199d290d0629bc23cea9277f45a59a68fd42519f367d5ab0e')

options=('!strip') # binaries are already stripped inside the Makefile

build() {
    cd "${srcdir}/website-${pkgver}"
    make
}

package() {
    cd "${srcdir}/website-${pkgver}"
    make install DESTDIR="${pkgdir}"
}
